{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug sampleapp (MSVC/cppvsdbg)",
      "type": "cppvsdbg",
      "request": "launch",
      "program": "${command:cmake.buildDirectory}/runtime/sampleapp/${command:cmake.buildType}/sampleapp.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "console": "integratedTerminal",
      "preLaunchTask": "CMake: Build (active preset, selected target)"
    },
    {
      "name": "Debug sampleapp (GDB/cppdbg)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.buildDirectory}/runtime/sampleapp/${command:cmake.buildType}/sampleapp.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "CMake: Build (active preset, selected target)"
    },
    {
      "name": "Attach to Process (MSVC)",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
